<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainFragment">

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="text|textEmailAddress" />

    <EditText
        android:id="@+id/txtCpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CPF"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexo" />

    <Spinner
        android:id="@+id/spinnerSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spinner" />

    <RadioGroup
        android:id="@+id/rdGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Onde você conheceu nosso App?" />

        <RadioButton
            android:id="@+id/rdAlguemRecomendou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Alguém me recomendou" />

        <RadioButton
            android:id="@+id/rdRedesSociais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redes sociais" />

        <RadioButton
            android:id="@+id/rdOutros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outros" />

    </RadioGroup>

    <Switch
        android:id="@+id/switchManterConectado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manter conectado?"
        tools:checked="true" />

    <CheckBox
        android:id="@+id/checkBoxOfertas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deseja receber ofertas por e-mail?" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar" />

</LinearLayout>